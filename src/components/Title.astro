---
import UnderlineTitle from '@/icons/UnderlineTitle.astro';
const props = Astro.props;
---

<div class="w-4/5 m-auto mb-6 md:mb-10">
    <h2 class:list={["font-normal text-center text-3xl md:text-5xl tracking-wide md:tracking-wider pb-2 md:pb-3 w-full", props.class]} >
        <slot>
            This is a default slot
        </slot>
    </h2>
    <UnderlineTitle
        class="m-auto h-auto w-3/5 max-w-[13rem] text-golden md:w-full"
    />
</div>
