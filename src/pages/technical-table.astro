---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import Title from '../components/Title.astro';
import CharactersTable from '../components/CharactersTable.astro';

import tailwindConfig from '../../tailwind.config.mjs';

const goldenColor = tailwindConfig.theme.extend.colors.golden.DEFAULT;
const goldenLightColor = tailwindConfig.theme.extend.colors.golden.light;
---

<Layout title="Ficha Técnica">
    <Section>
        <Title>Ficha Técnica</Title>
        <p class="m-auto mb-2 max-w-xl text-center text-base">
            Información acerca de los personajes de Violet Evergarden, sus
            participaciones en cada una de las series y los actores de doblaje
            que los interpretan en los formatos digitales (series y películas).
        </p>
        <div class="scrollbar max-w-[91,666%] overflow-auto p-1 pt-4">
            <CharactersTable />
        </div>
        <div class="m-auto max-w-5xl">
            <p class="m-auto text-right text-sm">
                Fuentes en <a
                    href="/see-more/#fuentes"
                    class="duration-200 ease-in-out hover:text-golden"
                    >Ver más...</a>
            </p>
        </div>
    </Section>
</Layout>

<style>
    .scrollbar::-webkit-scrollbar {
        height: 7px;
    }

    .scrollbar::-webkit-scrollbar-thumb {
        background: var(--lightGolden);
        border-radius: 4px;
    }

    .scrollbar::-webkit-scrollbar-thumb:active {
        background-color: var(--golden);
    }

    .scrollbar::-webkit-scrollbar-thumb:hover {
        display: block;
        background-color: var(--golden);
        box-shadow: 0 0 2px 1px #00000033;
    }

    .scrollbar::-webkit-scrollbar-track {
        background: #e1e1e1;
        border-radius: 4px;
    }

    .scrollbar::-webkit-scrollbar-track:hover,
    .scrollbar::-webkit-scrollbar-track:active {
        background: #d4d4d4;
    }

    .scrollbar:hover .scrollbar::-webkit-scrollbar-track,
    .scrollbar:scope .scrollbar::-webkit-scrollbar-track {
        display: block;
    }
</style>
