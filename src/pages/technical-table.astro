---
import Layout from '@/layouts/Layout.astro';
import Section from '@/components/Section.astro';
import Title from '@/components/Title.astro';
import CharactersTable from '@/components/CharactersTable.astro';
---

<Layout
    title="Ficha Técnica"
    description="Descubre información detallada sobre los personajes de Violet Evergarden, incluyendo sus participaciones en la serie y los actores de doblaje que los interpretan.">
    <Section>
        <Title>Ficha Técnica</Title>
        <div class="scrollbar-golden max-w-[91,666%] overflow-auto p-1 pt-4">
            <CharactersTable />
        </div>
        <a
            href="/see-more/sources/#navBar"
            class="m-auto mt-4 block p-1 text-right text-base text-golden-light duration-200 hover:text-golden hover:underline md:w-max md:text-center">
            Fuentes en Webs de Interés</a
        >
    </Section>
</Layout>
