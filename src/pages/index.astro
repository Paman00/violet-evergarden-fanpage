---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import violetWallpaper from '../images/violet-evergarden-hero.jpg';
import Title from '../components/Title.astro';
---

<Layout title="Inicio">
    <section class="p-5">
        <Title>Violet Evergarden</Title>
        <div class="m-auto w-4/5 md:w-3/5 max-w-[1887px] md:rounded rounded-sm overflow-hidden">
            <Image
                src={violetWallpaper}
                alt="Element Hero of Violet Evergarden seated with eyes closed"
                class="w-full"
            />
        </div>
    </section>
</Layout>
